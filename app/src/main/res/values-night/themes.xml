<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Omos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_orange</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/black_02</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:colorBackground">@color/bg_black</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_04</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Omos.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bg_black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Omos</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.Omos">
        <item name="android:textColorSecondary">@color/gray_03</item>
        <item name="actionMenuTextColor">@color/gray_03</item> <!--액션 메뉴의 텍스트 색상-->
    </style>

    <style name="StatusBarStyle" parent="Theme.Omos">
        <item name="android:statusBarColor">@color/deep_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="MainStatusBarStyle" parent="Theme.Omos">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="MenuItemStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/deep_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

</resources>