<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/normal_padding">

            <LinearLayout
                android:id="@+id/linear_music_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_stroke_gray"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/iv_spotify"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/music_icon"
                    android:textColor="@color/gray_01"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_spotify"
                android:layout_width="31dp"
                android:layout_height="21dp"
                android:contentDescription="@string/spotify_icon"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:src="@drawable/ic_spotify"
                app:layout_constraintBottom_toBottomOf="@id/linear_music_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/linear_music_info"
                app:layout_constraintTop_toTopOf="@id/linear_music_info" />

            <ImageView
                android:id="@+id/iv_album_cover"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="9dp"
                android:background="@color/gray_06"
                android:contentDescription="@string/album_cover"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_music_info" />

            <TextView
                android:id="@+id/tv_record_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/gray_06"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/colorOnBackground"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_record_contents"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_album_cover"
                app:layout_constraintTop_toTopOf="@id/iv_album_cover" />

            <TextView
                android:id="@+id/tv_record_contents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/gray_06"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/gray_05"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tv_date_and_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_album_cover"
                app:layout_constraintTop_toBottomOf="@id/tv_record_title" />

            <TextView
                android:id="@+id/tv_date_and_category"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/gray_06"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/gray_05"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_album_cover"
                app:layout_constraintStart_toEndOf="@id/iv_album_cover"
                app:layout_constraintTop_toBottomOf="@id/tv_record_contents" />

            <ImageView
                android:id="@+id/iv_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lock"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/ic_public" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</layout>