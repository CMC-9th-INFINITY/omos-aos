<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profile"
            type="com.infinity.omos.data.user.ProfileModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:background="@drawable/selector_border"
            android:padding="3dp"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="2dp"
            app:profileImageFromUrl="@{profile.profileUrl}"
            tools:src="@color/gray_06" />

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@{profile.nickname}"
            android:textColor="?attr/colorOnBackground"
            android:textSize="12sp"
            tools:text="DJ 닉네임열두글자까지가능" />

    </LinearLayout>

</layout>